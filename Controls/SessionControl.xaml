<UserControl x:Class="StudyTimer.Controls.SessionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudyTimer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="4" Height="50" Width="400" CornerRadius="10" Background="White" Opacity="0.80"/>
        
        <TextBlock x:Name="tbID" Grid.Column="0" Text="{Binding SessionId}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Bold" FontSize="16" Foreground="White"/>
        <TextBlock x:Name="tbDescription" Grid.Column="1" Text="{Binding Description}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Bold" FontSize="16" Foreground="White"/>
        <TextBlock x:Name="tbCreationTime" Grid.Column="2" Text="{Binding CreationTime, StringFormat=dd.MM.yyyy}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Bold" FontSize="16" Foreground="White"/>
        <TextBlock x:Name="tbDuration" Grid.Column="3" Text="{Binding Duration}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Bold" FontSize="16" Foreground="White"/>

    </Grid>
</UserControl>
