<Window x:Class="StudyTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Source="C:\Users\zajac\Desktop\wallpaper.jpg" Grid.RowSpan="3" Grid.Column="2" Stretch="UniformToFill"/>
        <Rectangle x:Name="SidePanel" Width="75" Fill="White" Opacity="0.50"/>

        <StackPanel x:Name="SidePanelStack" Grid.RowSpan="3" Orientation="Vertical" Margin="2,15,2,15">
            <Button Content="Home" Height="60" Width="60" Margin="0,10,0,10" Click="NavigateToHome_Click"/>
            <Button Content="Sessions" Height="60" Width="60" Margin="0,10,0,10" Click="NavigateToSessions_Click"/>
            <Button Content="Settings" Height="60" Width="60" Margin="0,10,0,10" Click="NavigateToSettings_Click"/>
        </StackPanel>

        <Frame x:Name="MainWindowDisplay" Grid.Column="1" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
