<Window x:Class="StudyTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Rectangle x:Name="Background" Fill="LightGreen" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
        <Rectangle x:Name="SidePanel" Width="50" Fill="MediumPurple"/>

        <StackPanel x:Name="SidePanelStack" Grid.RowSpan="3" Orientation="Vertical" Margin="2,15,2,15">
            <Button Content="Home" Height="45" Width="45" Margin="0,15,0,15" Click="NavigateToHome_Click"/>
            <Button Content="Sessions" Height="45" Width="45" Margin="0,15,0,15" Click="NavigateToSessions_Click"/>
            <Button Content="Settings" Height="45" Width="45" Margin="0,15,0,15" Click="NavigateToSettings_Click"/>
        </StackPanel>

        <Frame x:Name="MainWindowDisplay" Grid.Column="1" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
