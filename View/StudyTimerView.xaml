<Page x:Class="StudyTimer.View.StudyTimerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudyTimer.View" xmlns:viewmodel="clr-namespace:StudyTimer.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:StudyTimerViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="925"
      Title="StudyTimerView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Width="440" Height="80" Background="White" CornerRadius="25" Opacity="0.25"/>
        <TextBox Text="{Binding DescriptionContent}" Height="75" Width="400" Background="Transparent" BorderThickness="0" Foreground="Black"
         HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Bahnschrift"
         TextAlignment="Center" VerticalContentAlignment="Center"/>

        <Grid Grid.Row="1">
            <Button x:Name="btChangeTimerSettings" Style="{StaticResource GeneralButton}" Width="35" Height="35" Margin="300, 0, 0, 0" BorderBrush="Black" BorderThickness="1" Click="btChangeTimerSettings_Click">
                <Image Source="C:\Users\zajac\Desktop\PenIconTest.png" RenderOptions.BitmapScalingMode="HighQuality" Height="20" Width="20"/>
            </Button>
            <Border x:Name="TimerBackground" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Height="100" Width="250" Background="White" CornerRadius="25" Opacity="0.25"/>
            <TextBlock x:Name="tbTimer" Text="{Binding CurrentTime}"  Grid.Row="1" Grid.Column="1" FontFamily="Bahnschrift SemiLight" FontWeight="Bold" FontSize="64"
             HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        

        <WrapPanel x:Name="RowOfButtons" Grid.Row="2" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button x:Name="btPlay" Content="Play" Style="{StaticResource GeneralButton}" Margin="15, 0, 15, 0" Command="{Binding StartCommand}"/>
            <Button x:Name="btPauseResume" Content="{Binding PauseResumeButtonContent}" Style="{StaticResource GeneralButton}" Command="{Binding PauseResumeCommand}"/>
            <Button x:Name="btStop" Content="Stop" Style="{StaticResource GeneralButton}" Margin="15,0,15,0" Command="{Binding StopCommand}"/>
        </WrapPanel>

    </Grid>
</Page>
